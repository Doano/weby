<% if @events.empty? %>
  <div class="alert alert-warning">
    <%= t(".none_events") %>
  </div>
<% else %>
  <div class="pull-left"> <%= info_page @events %> </div>
  <div class="pull-right"> <%= paginate @events, remote: true %> </div>
  <div class="clearfix"></div>
  <div class="table-wrapper">
    <table class="table table-striped align-middle nowrap">
      <thead>
        <tr>
          <th class="center sel-all"><%= check_box_tag :select_all, 1, false %></th>
          <th width="30%"><%= sortable 'calendar_event_i18ns.name', t(".name") %></th>
          <th width="12%"><%= sortable 'users.first_name', t(".user") %></th>
          <th width="20%"><%= sortable 'tags.name', t(".category") %></th>
          <th width="12%"><%= sortable 'calendar_events.created_at', t(".created_at") %></th>
          <th width="12%"><%= sortable 'calendar_events.begin_at', t(".begin_at") %></th>
          <th width="5%" class="center"><%= sortable 'calendar_events.view_count', t(".views") %></th>
          <th width="5%" class="center"><%#= t(".action")%></th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <% event_site = event.event_site_for(current_site) %>
          <tr id="<%= event.id %>">
            <td class="center sel-item"><%= check_box_tag :select_item, event_site&.id, false %></td>
            <td>
              <% if event.site_id == current_site.id %>
                <% if check_permission(Calendar::Admin::EventsController, [:edit]) %>
                  <%= link_to "#{event.name} #{content_tag(:span, icon(:edit), class: 'oh-c-i')}".html_safe, edit_admin_event_path(event) %>
                <% else %>
                  <%= link_to event.name, event_path(event), target: :_blank %>
                <% end %>
              <% else %>
                <%= icon('retweet') %>
                <%= link_to event.name, event_url(event, subdomain: event.site), target: :_blank %>
              <% end %>
            </td>
            <td><%= event.user.first_name %></td>
            <td><%= raw categories_links(event_site&.categories) if event_site %></td>
            <td><%= l(event.created_at, format: :short) %></td>
            <td><%= l(event.begin_at, format: :short) %></td>
            <td width="5%" style="text-align:center;"><%= event.view_count %></td>
            <td class="actions" style="padding-left: 0px; padding-right: 5px;">
              <%= render_dropdown_menu do %>
                <%= link_to icon('eye-open', text: t('show')), event_url(event, subdomain: event.site), target: :_blank %>
                <% with_permission(action: :share) do %>
                  <%= link_to icon('trash', text: t('destroy')), unshare_admin_event_url(event.id), method: :delete, data: { confirm: t('are_you_sure_unshare_item', item: event.name) } if event.site_id != current_site.id %>
                <% end %>
                <% if event.site_id == current_site.id && check_permission(Calendar::Admin::EventsController, [:new]) %>
                  <%= link_to fa_icon('files-o', text: t('copy')), new_admin_event_path(copy_from: event_site&.id) %>
                <% end %>
                <%= make_menu(event, except: "show", with_text: true) %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render_bulk_actions do %>
      <% with_permission(action: :destroy_many) do %>
        <%= link_to icon('trash', text: t('destroy')), destroy_many_admin_events_path, class: 'btn btn-sm btn-default destroy-many', method: :delete, data: {confirm: t('are_you_sure_del_many')} %>
      <% end %>
    <% end %>
  </div>
  <div class="pull-left"> <%= per_page_links @events, true, :sm %> </div>
  <div class="pull-right"> <%= paginate @events, remote: true %> </div>
  <div class="clearfix"></div>
<% end %>