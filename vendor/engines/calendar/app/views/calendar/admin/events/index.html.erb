<% title ".events" %>
<% breadcrumb params[:search].present? ? :events_search : :events, params[:search] %>

<%= form_tag admin_events_path, method: 'get', autocapitalize: "off", class: 'search' do %>
  <div class="row">
    <div class="col-md-4">
      <%= search_input params[:search] %>
    </div>
    <div class="col-md-8">
      <div class="pull-right">
        <% with_permission(action: :new) do %>
          <%= link_to t(".new_event"),
              new_admin_event_path,
              class: "btn btn-success" %>
        <% end %>
        <% with_permission(controller: Sites::Admin::ExtensionsController, action: [:edit]) do %>
          <%= link_to icon('cog'), edit_site_admin_extension_path(current_site.extensions.find_by(name: 'calendar')), class: "btn btn-default", title: t('.settings') %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div id="events">
  <%= render partial: "list" %>
</div>