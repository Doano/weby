<% title ".news" %>
<% breadcrumb :news_show, @news %>

<article class="news-show">

  <%= render 'show' %>

  <div class="form-actions">
    <%= link_to icon('eye-open', text: t('show')), news_path(@news) if @news.published? || @news.user_id == current_user.id %>
    <%= make_menu(@news, :except => "show") %>
    <%= link_to icon('list', text: t(".list_all")), admin_news_index_path %>
    <%= link_to icon('chevron-left', text: t("back")), :back %>
  </div>
</article>

<% content_for :javascripts, javascript_include_tag("https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js") %>
<% content_for :javascripts, javascript_include_tag("https://uicdn.toast.com/editor/latest/i18n/pt-br.js") %>
<% content_for :stylesheets, stylesheet_link_tag("https://uicdn.toast.com/editor/latest/toastui-editor.min.css") %>